{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "go",
            "args": [
                "build",
                "-o",
                "bin/pest-detection-server",
                "./Http"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "test",
            "type": "shell",
            "command": "go",
            "args": [
                "test",
                "-v",
                "./Http"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "run",
            "type": "shell",
            "command": "go",
            "args": [
                "run",
                "./Http"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$go"
            ]
        }
    ]
}
